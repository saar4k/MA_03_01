<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="action_bar_background_color">#ff964f</color>
    <color name="background">#121212</color>
    <color name="black">#FF000000</color>
    <color name="dark_actionbar_background">#ff964f</color>
    <color name="dark_grey">#5A5A5A</color>
    <color name="purple_200">#FFBB86FC</color>
    <color name="purple_500">#FF6200EE</color>
    <color name="purple_700">#FF3700B3</color>
    <color name="teal_200">#FF03DAC5</color>
    <color name="teal_700">#FF018786</color>
    <color name="white">#FFFFFFFF</color>
    <string name="altitude_placeholder">HÃ¶he</string>
    <string name="app_name">Hoehenmesser2</string>
    <string name="calibration_value_placeholder">550 hPa</string>
    <style name="CustomToolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">#ff964f</item>
        <item name="titleTextColor">#121212</item>
    </style>
    <style name="MyDarkActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/dark_actionbar_background</item>
    </style>
    <style name="TextAppearance.DarkGrey" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextAppearance.DarkGrey.Heading" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Theme.Hoehenmesser" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowBackground">@color/background</item>

        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryVariant">@color/background</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <item name="android:textSize">30sp</item>
        <item name="android:buttonStyle">@style/mainButtons</item>
        <item name="android:textAppearance">@style/TextAppearance.DarkGrey</item>
        <item name="android:actionBarStyle">@style/MyDarkActionBar</item>
    </style>
    <style name="mainButtons" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/dark_grey</item>
        <item name="shapeAppearanceOverlay">@style/roundedCorners</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:gravity">center</item>

    </style>
    <style name="roundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>